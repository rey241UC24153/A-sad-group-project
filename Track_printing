//A-sad-group-project

#include <iostream>
#include <vector>
#include <cstdlib>
#include <ctime>
#include <list>
#include <string>
#include <iomanip>

using namespace std;

int main() {


    string track[10][8] = {
        {"   ", "   ", "   ", " x ", "   ", " x ", "   ", "   "},
        {" x ", "", "", "", "", "", "", "   "},
        {"   ", "", "", "", "", "", "", " x "},
        {" x ", "", "", "", "", "", "", " x "},
        {"   ", "", "", "", "", "", "", " x "},
        {" x ", "", "", "", "", "", "", "   "},
        {"   ", "", "", "", "", "", "", "   "},
        {"   ", "", "", "", "", "", "", "   "},
        {"   ", "", "", "", "", "", "", "   "},
        {"   ", "   ", "   ", " x ", " x ", " x ", "   ", "   "}
        };


    for (int i = 0; i < 10; i++) {

        if (i == 0 || i == 9) {
            for (int j = 0; j < 8; j++) {
                cout << "+---";
                if (j == 7) {
                    cout << "+" << endl;
                }
            }
            for (int k = 0; k < 8; k++) {
                    cout << "|" << track[i][k];
                    if (k == 7) {
                        cout << "|" << endl;
                    }
                }
            for (int l = 0; l < 8; l++) {
                cout << "+---";
                if (l == 7) {
                    cout << "+" << endl;
                }
            }
            } else if (i >= 1 && i != 9) {

                for (int m = 0; m < 8; m++) {
                if (m == 0) {
                    cout << "|" << track[i][m]  << "|";
                }
                if (m >= 1 && m != 7 && m != 6){
                    cout << "    ";
                }
                if (m == 6) {
                    cout << "   |";
                }
                if (m == 7) {
                    cout << track[i][m] <<"|" << endl;
                }
                }
            
            if (8 > i) {

            
                for (int n = 0; n < 8; n++) {
                
                if (n == 0) {
                    cout << "+---+";
                }

                if (n >= 1 && n != 7 && n != 6) {
                    cout << "    ";
                }

                if (n == 6) {
                    cout << "   +";
                }

                if (n == 7) {
                    cout << "---+" << endl;
                }

                }

            }
            }
        }

}
